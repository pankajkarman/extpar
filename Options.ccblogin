# compiler
F90      = gfortran

# linker
LD       = $(F90)

# global compilation flags
#FFLAGS   = -Wall -pedantic -fbacktrace -O2 -g -ffpe-trap=invalid,zero,overflow -fcheck=all -finit-real=nan -fopenmp -ffree-line-length-256
FFLAGS   = -Wall -pedantic -fbacktrace -O3 -g -fopenmp -ffree-line-length-256

# global linking flags
LFLAGS   =

# verbose compilation flags
VFLAGS   =

# force preprocessing flags
PFLAGS   += -cpp
# optimization flags (FOPT0=none, FOPT1=strong, FOPT2=strongest)
FOPT    =

# debugging flags
FDBG     = -O0 
FDBG    += -g 

# global libraries and includes
LIB      = 
INC      = 

# optimized flags, libraries and includes
OPTL     = 
OPTI     = 

# debugging flags, libraries and includes
DBGL     = 
DBGI     = 

# libraries and includes
INC     += -I$(HOME)/local.gcc/include
LIB     += -L$(HOME)/local.gcc/lib -Wl,-rpath,$(HOME)/local.gcc/lib -lnetcdff -lnetcdf -lhdf5_hl -lhdf5
